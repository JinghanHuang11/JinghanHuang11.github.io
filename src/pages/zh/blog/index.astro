---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { ui, type Locale } from '@/i18n/ui';

const locale: Locale = 'zh';
const t = ui[locale];

// Get all published posts
const allPosts = await getCollection('blog');
const publishedPosts = allPosts
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.publishedAt.valueOf() - a.data.publishedAt.valueOf());

// Get all unique tags
const allTags = Array.from(
  new Set(publishedPosts.flatMap((post) => post.data.tags))
).sort();
---

<BaseLayout
  title={t.blog.title}
  locale={locale}
>
  <div class="container-custom section-padding">
    <div class="mx-auto max-w-6xl">
      <!-- Header -->
      <div class="mb-12 text-center">
        <h1 class="heading-primary mb-4">{t.blog.title}</h1>
        <p class="text-body mx-auto max-w-2xl">
          {locale === 'en'
            ? 'Thoughts, tutorials, and insights on business analytics, research, and technology.'
            : '关于商务分析、研究和技术的思考、教程和见解。'}
        </p>
      </div>

      <!-- Tags Filter -->
      <div class="mb-8">
        <div class="flex flex-wrap items-center gap-2">
          <span class="text-sm font-medium text-slate-700 dark:text-slate-300">
            {t.projects.filter}:
          </span>
          <button
            class="filter-btn active rounded-full px-4 py-2 text-sm font-medium transition-colors"
            data-filter="all"
          >
            {t.projects.all}
          </button>
          {allTags.map((tag) => (
            <button
              class="filter-btn rounded-full px-4 py-2 text-sm font-medium transition-colors"
              data-filter={tag}
            >
              {tag}
            </button>
          ))}
        </div>
      </div>

      <!-- Posts Grid -->
      <div id="posts-grid" class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
        {publishedPosts.map((post) => {
          const { title, description, publishedAt, tags } = post.data;
          const formattedDate = new Date(publishedAt).toLocaleDateString(
            locale === 'zh' ? 'zh-CN' : 'en-US',
            { year: 'numeric', month: 'long', day: 'numeric' }
          );

          return (
            <a
              href={`/zh/blog/${post.slug}/`}
              class="post-card group card block transition-all hover:-translate-y-1"
              data-tags={tags.join(',')}
            >
              <div class="mb-3 flex items-center gap-2 text-sm text-slate-600 dark:text-slate-400">
                <time>{formattedDate}</time>
                <span class="text-slate-300 dark:text-slate-700">•</span>
                <span>{tags.length} {t.blog.tags.toLowerCase()}</span>
              </div>

              <h3 class="heading-tertiary mb-2 group-hover:text-primary-600 dark:group-hover:text-primary-400">
                {title}
              </h3>

              <p class="text-body mb-4 line-clamp-2 text-sm">
                {description}
              </p>

              <div class="flex flex-wrap gap-2">
                {tags.slice(0, 3).map((tag) => (
                  <span class="rounded-full bg-slate-100 px-3 py-1 text-xs font-medium text-slate-600 dark:bg-slate-800 dark:text-slate-400">
                    {tag}
                  </span>
                ))}
                {tags.length > 3 && (
                  <span class="rounded-full bg-slate-100 px-3 py-1 text-xs font-medium text-slate-600 dark:bg-slate-800 dark:text-slate-400">
                    +{tags.length - 3}
                  </span>
                )}
              </div>
            </a>
          );
        })}
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .filter-btn {
    @apply bg-white text-slate-600 hover:bg-slate-100 dark:bg-dark-800 dark:text-slate-400 dark:hover:bg-dark-700;
  }

  .filter-btn.active {
    @apply bg-primary-600 text-white hover:bg-primary-700 dark:bg-primary-500 dark:hover:bg-primary-600;
  }

  .post-card.hidden {
    display: none;
  }
</style>

<script>
  const filterBtns = document.querySelectorAll<HTMLElement>('.filter-btn');
  const postCards = document.querySelectorAll<HTMLElement>('.post-card');

  filterBtns.forEach((btn) => {
    btn.addEventListener('click', () => {
      const filter = btn.dataset.filter;

      // Update active button
      filterBtns.forEach((b) => b.classList.remove('active'));
      btn.classList.add('active');

      // Filter posts
      postCards.forEach((card) => {
        const tags = card.dataset.tags || '';
        if (filter === 'all' || tags.includes(filter)) {
          card.classList.remove('hidden');
        } else {
          card.classList.add('hidden');
        }
      });
    });
  });
</script>
