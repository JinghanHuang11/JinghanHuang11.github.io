---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { profile } from '@/data/profile';
import { ui, type Locale } from '@/i18n/ui';

const urlLocale = Astro.url.searchParams.get('lang') as Locale | null;
const locale: Locale = (urlLocale === 'en' || urlLocale === 'zh' ? urlLocale : 'en');
const t = ui[locale];
---

<BaseLayout
  title={t.contact.title}
  locale={locale}
>
  <div class="container-custom section-padding">
    <div class="mx-auto max-w-4xl">
      <!-- Header -->
      <div class="mb-12 text-center">
        <h1 class="heading-primary mb-4">{t.contact.title}</h1>
        <p class="text-body text-lg">
          {t.contact.subtitle}
        </p>
      </div>

      <!-- Contact Cards -->
      <div class="mb-12 grid gap-6 sm:grid-cols-3">
        <!-- Email -->
        <a
          href={`mailto:${profile.social.email}`}
          class="card group block transition-all hover:-translate-y-1"
        >
          <div class="flex items-start gap-4">
            <div class="rounded-lg bg-primary-100 p-3 dark:bg-primary-950">
              <svg class="h-6 w-6 text-primary-600 dark:text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width={2} d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="mb-1 font-semibold text-slate-900 dark:text-slate-100">
                {t.contact.email}
              </h3>
              <p class="text-body text-sm">
                {profile.social.email}
              </p>
            </div>
          </div>
        </a>

        <!-- GitHub -->
        <a
          href={`https://github.com/${profile.social.github}`}
          target="_blank"
          rel="noopener noreferrer"
          class="card group block transition-all hover:-translate-y-1"
        >
          <div class="flex items-start gap-4">
            <div class="rounded-lg bg-primary-100 p-3 dark:bg-primary-950">
              <svg class="h-6 w-6 text-primary-600 dark:text-primary-400" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="mb-1 font-semibold text-slate-900 dark:text-slate-100">
                GitHub
              </h3>
              <p class="text-body text-sm">
                @{profile.social.github}
              </p>
            </div>
          </div>
        </a>

        <!-- Xiaohongshu (小红书) -->
        <a
          href={`https://www.xiaohongshu.com/user/profile/${profile.social.xiaohongshu}`}
          target="_blank"
          rel="noopener noreferrer"
          class="card group block transition-all hover:-translate-y-1"
        >
          <div class="flex items-start gap-4">
            <div class="rounded-lg bg-primary-100 p-3 dark:bg-primary-950">
              <img src="/images/xiaohongshu.png" alt="Xiaohongshu" class="h-7 w-7 object-contain" />
            </div>
            <div class="flex-1">
              <h3 class="mb-1 font-semibold text-slate-900 dark:text-slate-100">
                {locale === 'en' ? 'Xiaohongshu' : '小红书'}
              </h3>
              <p class="text-body text-sm">
                {profile.social.xiaohongshu}
              </p>
            </div>
          </div>
        </a>
      </div>

      <!-- Quick Message Form -->
      <section class="card">
        <h2 class="heading-secondary mb-6">
          {locale === 'en' ? 'Send a Quick Message' : '发送快速消息'}
        </h2>
        <p class="text-body mb-6">
          {locale === 'en'
            ? 'Feel free to reach out! I\'ll get back to you as soon as possible.'
            : '随时联系我！我会尽快回复。'}
        </p>

        <form
          action="https://formspree.io/f/your-form-id"
          method="POST"
          class="space-y-6"
        >
          <div class="grid gap-6 sm:grid-cols-2">
            <div>
              <label for="name" class="mb-2 block text-sm font-medium text-slate-900 dark:text-slate-100">
                {locale === 'en' ? 'Name' : '姓名'}
              </label>
              <input
                type="text"
                name="name"
                id="name"
                required
                class="w-full rounded-lg border border-slate-300 bg-white px-4 py-2 text-slate-900 focus:border-primary-500 focus:ring-2 focus:ring-primary-500 dark:border-slate-700 dark:bg-dark-800 dark:text-slate-100"
                placeholder={locale === 'en' ? 'Your name' : '您的姓名'}
              />
            </div>
            <div>
              <label for="email" class="mb-2 block text-sm font-medium text-slate-900 dark:text-slate-100">
                Email
              </label>
              <input
                type="email"
                name="email"
                id="email"
                required
                class="w-full rounded-lg border border-slate-300 bg-white px-4 py-2 text-slate-900 focus:border-primary-500 focus:ring-2 focus:ring-primary-500 dark:border-slate-700 dark:bg-dark-800 dark:text-slate-100"
                placeholder={locale === 'en' ? 'your@email.com' : 'your@email.com'}
              />
            </div>
          </div>

          <div>
            <label for="subject" class="mb-2 block text-sm font-medium text-slate-900 dark:text-slate-100">
              {locale === 'en' ? 'Subject' : '主题'}
            </label>
            <input
              type="text"
              name="subject"
              id="subject"
              required
              class="w-full rounded-lg border border-slate-300 bg-white px-4 py-2 text-slate-900 focus:border-primary-500 focus:ring-2 focus:ring-primary-500 dark:border-slate-700 dark:bg-dark-800 dark:text-slate-100"
              placeholder={locale === 'en' ? 'What is this about?' : '这是关于什么？'}
            />
          </div>

          <div>
            <label for="message" class="mb-2 block text-sm font-medium text-slate-900 dark:text-slate-100">
              {locale === 'en' ? 'Message' : '消息'}
            </label>
            <textarea
              name="message"
              id="message"
              rows={5}
              required
              class="w-full rounded-lg border border-slate-300 bg-white px-4 py-2 text-slate-900 focus:border-primary-500 focus:ring-2 focus:ring-primary-500 dark:border-slate-700 dark:bg-dark-800 dark:text-slate-100"
              placeholder={locale === 'en' ? 'Your message...' : '您的消息...'}
            ></textarea>
          </div>

          <button type="submit" class="btn-primary w-full sm:w-auto">
            {locale === 'en' ? 'Send Message' : '发送消息'}
          </button>
        </form>

        <p class="mt-6 text-sm text-slate-600 dark:text-slate-400">
          {locale === 'en'
            ? 'Note: To use this form, sign up at '
            : '注意：要使用此表单，请先在 '}
          <a
            href="https://formspree.io/"
            target="_blank"
            rel="noopener noreferrer"
            class="text-primary-600 hover:underline dark:text-primary-400"
          >
            Formspree
          </a>
          {locale === 'en'
            ? ' and replace "your-form-id" with your form ID.'
            : ' 注册，然后将 "your-form-id" 替换为您的表单 ID。'}
        </p>
      </section>
    </div>
  </div>
</BaseLayout>
