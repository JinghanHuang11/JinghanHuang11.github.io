---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { profile } from '@/data/profile';
import { projects } from '@/data/projects';
import ProjectCard from '@/components/ui/ProjectCard.astro';
import { getCollection } from 'astro:content';
import { ui, type Locale } from '@/i18n/ui';

// Force Chinese locale for /zh/ pages
const locale: Locale = 'zh';
const t = ui[locale];

// Get recent blog posts
const allPosts = await getCollection('blog');
const recentPosts = allPosts
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.publishedAt.valueOf() - a.data.publishedAt.valueOf())
  .slice(0, 3);

// Get featured projects
const featuredProjects = projects.filter(p => p.featured).slice(0, 3);
---

<BaseLayout
  title={`${profile.name[locale]} - ${t.home.hero.tagline}`}
  description={profile.bio[locale]}
  locale={locale}
>
  <!-- Hero Section -->
  <section class="section-padding">
    <div class="container-custom">
      <div class="flex flex-col items-center text-center sm:flex-row sm:text-left">
        <div class="mb-8 sm:mb-0 sm:mr-12">
          <div class="relative mb-6 overflow-hidden rounded-full">
            <img
              src={profile.avatar}
              alt={profile.name[locale]}
              class="h-32 w-32 rounded-full object-cover sm:h-40 sm:w-40"
            />
          </div>
        </div>

        <div class="flex-1">
          <p class="mb-2 text-lg text-slate-600 dark:text-slate-400">
            {t.home.hero.greeting}
          </p>
          <h1 class="heading-primary mb-4 gradient-text">
            {profile.name[locale]}
          </h1>
          <p class="mb-6 text-lg font-semibold leading-tight text-slate-700 dark:text-slate-200 sm:text-xl">
            "{profile.tagline[locale]}"
          </p>
          <p class="text-body mb-8 max-w-2xl">
            {profile.bio[locale]}
          </p>

          <!-- Enhanced CTA Buttons -->
          <div class="flex flex-col gap-4 sm:flex-row">
            <a
              href="/zh/contact"
              class="btn-primary group relative overflow-hidden"
            >
              <span class="relative z-10 flex items-center gap-2">
                {'一起合作'}
                <svg class="h-4 w-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width={2} d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </span>
            </a>

            <a
              href="/zh/resume"
              class="btn-secondary group relative"
            >
              <span class="flex items-center gap-2">
                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width={2} d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                {'下载简历'}
              </span>
            </a>

            <a
              href="mailto:huangjh2022@163.com"
              class="inline-flex items-center justify-center rounded-lg border-2 border-primary-200 bg-transparent px-6 py-3 font-medium text-primary-600 transition-all hover:border-primary-300 hover:bg-primary-50 dark:border-primary-800 dark:text-primary-400 dark:hover:border-primary-700 dark:hover:bg-primary-950"
            >
              <svg class="mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width={2} d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <span class="hidden sm:inline">{'发邮件'}</span>
              <span class="sm:hidden">{'邮件'}</span>
            </a>
          </div>

          <!-- Social Links -->
          <div class="mt-6 flex items-center justify-center gap-4 sm:justify-start">
            <a
              href={`https://github.com/${profile.social.github}`}
              target="_blank"
              rel="noopener noreferrer"
              class="rounded-full p-2 text-slate-600 transition-colors hover:bg-slate-100 hover:text-slate-900 dark:text-slate-400 dark:hover:bg-dark-800 dark:hover:text-slate-100"
              aria-label="GitHub"
            >
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
            </a>

            <a
              href={`mailto:${profile.social.email}`}
              class="rounded-full p-2 text-slate-600 transition-colors hover:bg-slate-100 hover:text-slate-900 dark:text-slate-400 dark:hover:bg-dark-800 dark:hover:text-slate-100"
              aria-label="Email"
            >
              <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width={2} d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Projects -->
  <section class="bg-slate-50 dark:bg-dark-900">
    <div class="container-custom section-padding">
      <div class="mb-12 text-center">
        <h2 class="heading-secondary mb-4">{t.home.latestProjects}</h2>
        <p class="text-body mx-auto max-w-2xl">
          {'我在商务分析、财务分析和 AI 研究方面的部分最新作品。'}
        </p>
      </div>

      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
        {featuredProjects.map((project) => (
          <ProjectCard project={project} locale={locale} />
        ))}
      </div>

      <div class="mt-12 text-center">
        <a href="/zh/projects" class="btn-secondary">
          {'查看所有项目'}
        </a>
      </div>
    </div>
  </section>

  <!-- Latest Blog Posts -->
  <section>
    <div class="container-custom section-padding">
      <div class="mb-12 text-center">
        <h2 class="heading-secondary mb-4">{t.home.latestPosts}</h2>
        <p class="text-body mx-auto max-w-2xl">
          {'关于商务分析、研究和技术的思考。'}
        </p>
      </div>

      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
        {recentPosts.map((post) => (
          <a
            href={`/zh/blog/${post.slug}/`}
            class="group card block transition-all hover:-translate-y-1"
          >
            <div class="mb-3 text-sm text-slate-600 dark:text-slate-400">
              <time>
                {new Date(post.data.publishedAt).toLocaleDateString(
                  locale === 'zh' ? 'zh-CN' : 'en-US',
                  { year: 'numeric', month: 'long', day: 'numeric' }
                )}
              </time>
            </div>
            <h3 class="heading-tertiary mb-2 group-hover:text-primary-600 dark:group-hover:text-primary-400">
              {post.data.title}
            </h3>
            <p class="text-body text-sm line-clamp-2">
              {post.data.description}
            </p>
            <div class="mt-3 flex flex-wrap gap-2">
              {post.data.tags.slice(0, 3).map((tag) => (
                <span class="rounded-full bg-slate-100 px-3 py-1 text-xs font-medium text-slate-600 dark:bg-slate-800 dark:text-slate-400">
                  {tag}
                </span>
              ))}
            </div>
          </a>
        ))}
      </div>

      <div class="mt-12 text-center">
        <a href="/zh/blog" class="btn-secondary">
          {'查看所有文章'}
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
